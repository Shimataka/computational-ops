{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo-pwd",
            "type": "shell",
            "command": "pwd"
        },
        {
            "label": "py-make-env",
            "type": "process",
            "command": ".settings/templates/python/makeenv.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "py-pytest",
            "type": "shell",
            "command": "~/.cargo/bin/uv",
            "args": [
                "run",
                "pytest",
                "${workspaceFolder}/tests"
            ],
            "hide": true,
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/.venv/bin/python"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
